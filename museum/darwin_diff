+			// cxtors & casts
+			Event(                                            ) = default ;
+			Event( bool write , Fd  fd  , uint16_t f , E d={} ) : Base{.ident=uintptr_t(fd ),.filter=int16_t(write?EVFILT_WRITE:EVFILT_READ),.flags=f,.udata=reinterpret_cast<void*>(uint32_t(d))} {}
