+			Fd  fd  (             ) const { SWEAR(filter!=EVFILT_SIGNAL) ; return ident                                 ; }
+			E   data(             ) const {                                return E(reinterpret_cast<uintptr_t>(udata)) ; }
+		} ;
+		// services
+		void init() {
+			_fd = AcFd(::kqueue()) ;
+		}
+		#define N  nullptr
