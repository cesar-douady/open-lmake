#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export DEB_BUILD_MAINT_OPTIONS = hardening=+all

APPARMOR_VERSION="$(shell apparmor_parser --version | sed -En 's/^.*version ([0-9]).*/\1/p')"

%:
	dh $@

override_dh_auto_build:
	make LMAKE

override_dh_auto_install:
	dh_auto_install -- prefix=/usr
ifeq ($(APPARMOR_VERSION),"4")
	cp debian/apparmor-profile debian/open-lmake/etc/apparmor.d/open-lmake
	dh_apparmor --profile-name=open-lmake -popen-lmake
endif

override_dh_strip:
	dh_strip --no-automatic-dbgsym

override_dh_makeshlibs:
	dh_makeshlibs -X/usr/lib/open-lmake/_lib/ld_audit.so -X/usr/lib/open-lmake/_lib/ld_preload.so -X/usr/lib/open-lmake/lib/clmake.so

override_dh_dwz:
# Do nothing

